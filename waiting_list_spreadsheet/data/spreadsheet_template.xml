<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Default Spreadsheet Template -->
        <record id="waiting_list_default_spreadsheet" model="waiting.list.spreadsheet">
            <field name="name">Waiting List Analytics Dashboard</field>
            <field name="active" eval="True"/>
        </record>
        
        <!-- Scheduled Action: Auto-refresh dashboard data every hour -->
        <record id="ir_cron_waiting_list_spreadsheet_refresh" model="ir.cron">
            <field name="name">Waiting List: Refresh Spreadsheet Analytics</field>
            <field name="model_id" ref="model_waiting_list_spreadsheet"/>
            <field name="state">code</field>
            <field name="code">model.search([]).action_refresh_data()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="active" eval="True"/>
        </record>
        
    </data>
</odoo>
