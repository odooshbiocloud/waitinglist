<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Security Groups -->
        <record id="group_waiting_list_hostess" model="res.groups">
            <field name="name">Waiting List Hostess</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="comment">Can manage waiting list entries</field>
        </record>
        
        <record id="group_waiting_list_manager" model="res.groups">
            <field name="name">Waiting List Manager</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="implied_ids" eval="[(4, ref('group_waiting_list_hostess'))]"/>
            <field name="comment">Can access analytics and manage all waiting list operations</field>
        </record>
        
        <record id="group_waiting_list_admin" model="res.groups">
            <field name="name">Waiting List Admin</field>
            <field name="category_id" ref="base.module_category_sales"/>
            <field name="implied_ids" eval="[(4, ref('group_waiting_list_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
            <field name="comment">Full access to all waiting list features and configuration</field>
        </record>
        
        <!-- Record Rules -->
        
        <!-- Waiting List Rules -->
        <record id="waiting_list_rule_manager" model="ir.rule">
            <field name="name">Manager/Admin: All Waiting List Multi-Company</field>
            <field name="model_id" ref="model_waiting_list"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_waiting_list_manager')), (4, ref('group_waiting_list_admin'))]"/>
        </record>
        
        <record id="waiting_list_rule_hostess" model="ir.rule">
            <field name="name">Hostess: All Waiting List Multi-Company</field>
            <field name="model_id" ref="model_waiting_list"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_waiting_list_hostess'))]"/>
        </record>
        
        <!-- Customer Rules -->
        <record id="partner_rule_restaurant_customers" model="ir.rule">
            <field name="name">Customers Multi-Company</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_waiting_list_hostess'))]"/>
        </record>
        
    </data>
</odoo>