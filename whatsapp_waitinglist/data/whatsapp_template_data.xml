<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    
    <!-- Table Ready WhatsApp Template -->
    <record id="whatsapp_template_waitinglist_ready" model="whatsapp.template" forcecreate="0">
        <field name="name">Waiting List: Table Ready</field>
        <field name="template_name">waitinglist_table_ready</field>
        <field name="lang_code">en</field>
        <field name="template_type">utility</field>
        <field name="footer_text">Write 'STOP' to unsubscribe</field>
        <field name="phone_field">customer_mobile</field>
        <field name="model_id" ref="waiting_list_enterprise.model_waiting_list"/>
        <field name="body">Dear *{{1}}*,

Good news! Your table for *{{2}}* guests is now ready at *{{3}}*.

Please proceed to the host stand.

Thank you for your patience!
        </field>
        <field name="variable_ids" eval="[
            (5, 0, 0),
            (0, 0, {
                'name': '{{1}}',
                'demo_value': 'John Smith',
                'line_type': 'body',
                'field_type': 'field',
                'field_name': 'customer_id'
            }),
            (0, 0, {
                'name': '{{2}}',
                'demo_value': '4',
                'line_type': 'body',
                'field_type': 'field',
                'field_name': 'party_size'
            }),
            (0, 0, {
                'name': '{{3}}',
                'demo_value': 'Table 10',
                'line_type': 'body',
                'field_type': 'field',
                'field_name': 'table_id'
            })
        ]" />
    </record>

